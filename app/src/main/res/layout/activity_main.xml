<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.company.sap.calculadora.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:id="@+id/txtScroll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end">

                <TextView
                    android:layout_height="match_parent"
                    android:id="@+id/txtPrevCalc"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/darker_gray"
                    android:textAllCaps="false"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:scrollHorizontally="true" />

            </LinearLayout>
        </HorizontalScrollView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtResultado"
            android:textSize="48sp"
            android:textAlignment="textEnd"
            android:inputType="numberDecimal"
            android:hint="0"
            android:cursorVisible="true"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_width="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="DEL&#10;AC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnDel"
                    android:layout_weight="1"
                    android:textSize="12sp" />

                <Button
                    android:text="√"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnRaiz"
                    android:layout_weight="1" />

                <Button
                    android:text="^"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnPot"
                    android:textIsSelectable="false"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:text="X"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMulti"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:elevation="1dp">

                <Button
                    android:text="7"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="8"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="9"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="÷"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDiv"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <Button
                    android:text="4"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="5"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="6"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnResta"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <Button
                    android:text="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="3"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="+"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSuma"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <Button
                    android:text="."
                    android:layout_height="wrap_content"
                    android:id="@+id/btnPunto"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="0"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="=&#10;NAME"
                    android:layout_height="match_parent"
                    android:id="@+id/btnIgual"
                    android:layout_width="match_parent"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
